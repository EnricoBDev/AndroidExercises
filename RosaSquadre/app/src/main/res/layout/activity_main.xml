<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/EtxNome"
        android:hint="Inserisci il nome della squdra"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BtnInserisciSquadra"
        app:layout_constraintTop_toBottomOf="@id/EtxNome"
        app:layout_constraintLeft_toLeftOf="@id/EtxNome"
        app:layout_constraintRight_toRightOf="@id/EtxNome"
        android:text="Invia"
    />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LsvSquadre"
        app:layout_constraintTop_toBottomOf="@id/BtnInserisciSquadra"
        app:layout_constraintLeft_toLeftOf="@id/EtxNome"
        app:layout_constraintRight_toRightOf="@id/EtxNome"
        android:layout_marginTop="100dp"
    />
</androidx.constraintlayout.widget.ConstraintLayout>