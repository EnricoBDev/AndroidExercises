<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RosaActivity">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/EtxNomeGiocatore"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Inserisci il nome del giocatore"
        android:layout_marginTop="20dp"
    />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/EtxCognome"
        app:layout_constraintTop_toBottomOf="@+id/EtxNomeGiocatore"
        app:layout_constraintLeft_toLeftOf="@+id/EtxNomeGiocatore"
        app:layout_constraintRight_toRightOf="@+id/EtxNomeGiocatore"
        android:hint="Inserisci il cognome del giocatore"
        android:layout_marginTop="20dp"
    />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BtnInserisciGiocatore"
        app:layout_constraintTop_toBottomOf="@id/EtxCognome"
        app:layout_constraintLeft_toLeftOf="@id/EtxCognome"
        app:layout_constraintRight_toRightOf="@id/EtxCognome"
        android:text="Invia"
        android:layout_marginTop="20dp"
    />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LsvGiocatori"
        app:layout_constraintTop_toBottomOf="@id/BtnInserisciGiocatore"
        app:layout_constraintRight_toRightOf="@id/BtnInserisciGiocatore"
        app:layout_constraintLeft_toLeftOf="@id/BtnInserisciGiocatore"
        android:layout_marginTop="100dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>