<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background"
    android:id="@+id/CLYT">

    <TextView
        android:id="@+id/TXV_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inserisci un numero da 1 a 10"
        android:layout_marginBottom="500dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/ETX_inserimento"
        android:inputType="number"
        android:layout_marginTop="20dp"
        android:hint="@string/ETX_hint"
        app:layout_constraintTop_toBottomOf="@+id/TXV_hint"
        app:layout_constraintStart_toStartOf="@id/TXV_hint"
        app:layout_constraintEnd_toEndOf="@id/TXV_hint" />

    <Button
        android:id="@+id/BTN_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/BTN_text"
        app:layout_constraintStart_toStartOf="@id/ETX_inserimento"
        app:layout_constraintEnd_toEndOf="@id/ETX_inserimento"
        app:layout_constraintTop_toBottomOf="@id/ETX_inserimento"
        />

    <EditText
        android:id="@+id/ETX_nome"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:hint="Inserisci il tuo nome"
        android:visibility="invisible"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/BTN_submit"
        app:layout_constraintLeft_toLeftOf="@id/BTN_submit"
        app:layout_constraintRight_toRightOf="@id/BTN_submit"
        />

    <Button
        android:id="@+id/BTN_submit_classifica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invia"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/ETX_nome"
        app:layout_constraintLeft_toLeftOf="@id/BTN_submit"
        app:layout_constraintRight_toRightOf="@id/BTN_submit"
    />

    <ListView
        android:id="@+id/LSV_classifica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/BTN_submit_classifica"
        app:layout_constraintLeft_toLeftOf="@id/BTN_submit"
        app:layout_constraintRight_toRightOf="@id/BTN_submit"
    />
</androidx.constraintlayout.widget.ConstraintLayout>